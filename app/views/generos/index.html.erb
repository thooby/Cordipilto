<h1>Listing generos</h1>

<table>
  <tr>
    <th>Descripcion</th>
  </tr>

<% @generos.each do |genero| %>
  <tr>
    <td><%=h genero.descripcion %></td>
    <td><%= link_to 'Show', genero %></td>
    <td><%= link_to 'Edit', edit_genero_path(genero) %></td>
    <td><%= link_to 'Destroy', genero, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New genero', new_genero_path %>