<h1>Listing aguas</h1>

<table>
  <tr>
    <th>Descripcion</th>
  </tr>

<% @aguas.each do |agua| %>
  <tr>
    <td><%=h agua.descripcion %></td>
    <td><%= link_to 'Show', agua %></td>
    <td><%= link_to 'Edit', edit_agua_path(agua) %></td>
    <td><%= link_to 'Destroy', agua, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New agua', new_agua_path %>