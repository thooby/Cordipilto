<h1>Listing personas</h1>

<table>
  <tr>
    <th>Finca</th>
    <th>Nombre1</th>
    <th>Nombre2</th>
    <th>Apellido1</th>
    <th>Apellido2</th>
    <th>Fecha nac</th>
    <th>Genero</th>
    <th>Alfabe</th>
    <th>Naciona</th>
    <th>Direccion</th>
    <th>Profesion</th>
    <th>Parentesco</th>
    <th>Cabeza familia</th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%=h persona.finca_id %></td>
    <td><%=h persona.nombre1 %></td>
    <td><%=h persona.nombre2 %></td>
    <td><%=h persona.apellido1 %></td>
    <td><%=h persona.apellido2 %></td>
    <td><%=h persona.fecha_nac %></td>
    <td><%=h persona.genero_id %></td>
    <td><%=h persona.alfabe_id %></td>
    <td><%=h persona.naciona_id %></td>
    <td><%=h persona.direccion %></td>
    <td><%=h persona.profesion_id %></td>
    <td><%=h persona.parentesco_id %></td>
    <td><%=h persona.cabeza_familia %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

